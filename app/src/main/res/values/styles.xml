<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkBrown</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="stats_text" parent="text">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/lightBrown</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">23dp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="stats_count_text" parent="text">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/darkBrown</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">29dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <dimen name="toolbar_height">50dp</dimen>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="background">@color/bgLightPink</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="toolbar_image">
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:layout_width">@dimen/toolbar_height</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="toolbar_title">
        <item name="fontFamily">@font/merriweather_regular</item>
        <item name="android:textColor">@color/darkBrown</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_height">41dp</item>
    </style>

    <style name="edit_profile_labels">
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/lightBrown</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="edit_profile_inputs" parent="edit_profile_labels">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/darkBrown</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="login_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="login_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">21sp</item>
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginEnd">60dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="login_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="colorful_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">21sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="bottom_login_hint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>
</resources>